extends layout

block content
  h1= title
  a(href=item.url + '/update') Update Item
  a(href=item.url+'/delete') Delete Item
  div
    h2= item.name
    p Description: #{item.description}
    p Price: $#{item.price}
    p Stock: #{item.stock}
    if item.size && item.size.length > 0
      p Sizes: #{item.size.join(', ')}
    p Category: 
        a(href=item.category.url)= item.category.name
    p Brand: 
        a(href=item.brand.url)= item.brand.name

doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    if user
      h1 WELCOME BACK #{user.username}
    ul
      li: a(href="/") Go Home 
      li: a(href='/inventory/items') View Items
      li: a(href='/inventory/categories') View Categories
      li: a(href='/inventory/brands') View Brands
      li: a(href='/inventory/item/create') Create Item
      li: a(href='/inventory/category/create') Create Category
      li: a(href='/inventory/brand/create') Create Brand
    if isAuthenticated
      li: a(href='/authentication/logout') Logout
    else
      li: a(href='/authentication/login') Login
    block content
